.row
  .col-md-3
    %h1 
      = "#{@url.provider_name}"
    - if policy(@bookmark).update?
      %div
        = link_to "Edit", edit_topic_bookmark_path(@topic, @bookmark), class: "btn btn-success btn-xs"
        = link_to "Delete", topic_bookmark_path(), method: :delete, class: "btn btn-danger btn-xs", data: { confirm: "Are you sure you want to delete this bookmark?"}
  .col-md-8
    .media
      .media-body
        %br/
        %br/
        = @url.provider_name
        =# image_tag @url.url
        = @url.html.html_safe
  .col-md-1
