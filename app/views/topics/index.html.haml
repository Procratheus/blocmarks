%h1 
  Topics
.row
  .col-md-8   
    - @topics.each do |topic|
      .media
        .media-body
          %h4.media-heading 
            = topic.title
      - topic.bookmarks.each do |bookmark|
        .media-body
          %h4.media-heading 
            = bookmark.url          
  .col-md-4
    = link_to "New Topic", new_topic_path, class: "btn btn-success"


