.row
  .col-md-4
    %h1 
      = "##{@topic.title}"
    - if policy(@topic).edit? 
      = link_to "Edit Topic", edit_topic_path(@topic), class: "btn btn-success btn-xs"
      = link_to "Delete Topic", topic_path(@topic), method: :delete, class: "btn btn-danger btn-xs", data: { confirm: "Are you sure you want to delete this topic?"}
    - if policy(Bookmark.new).create?
      = link_to "New Bookmark", new_topic_bookmark_path(@topic, @topic.bookmarks.new), class: "btn btn-info btn-xs"
      = link_to "Back", :back, class: "btn btn-info btn-xs"
  .col-md-8
    .media
      .media-body
        %br/
        %br/
        - @bookmarks.each do |bookmark|
          %h6
          = link_to "#{bookmark.url}", [@topic, bookmark]
    
    

