%h1 
  = "#{@topic.title}"
= link_to "Edit Topic", edit_topic_path, class: "btn btn-success"

.row
  .col-md-8
  - @topic.bookmarks.each do |bookmark|
    %p.lead
      = bookmark.title
    %p
      = bookmark.url
  .col-md-4
    = link_to "Delete", topic_path(@topic), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this topic?"}
    

