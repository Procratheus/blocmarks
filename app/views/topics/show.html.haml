.row
  .col-md-3
    %h1 
      = "##{@topic.title}"
    = link_to "Edit Topic", edit_topic_path, class: "btn btn-success btn-xs"
    = link_to "Delete Topic", topic_path(@topic), method: :delete, class: "btn btn-danger btn-xs", data: { confirm: "Are you sure you want to delete this topic?"}
    = link_to "New Bookmark", new_topic_bookmark_path(@topic, @topic.bookmarks.new), class: "btn btn-info btn-xs"
  .col-md-8
    .media
      .media-body
        %br/
        %br/
        - @topic.bookmarks.each do |bookmark|
          .media-body
            %h6.media-heading
              = link_to "#{bookmark.url}", topic_bookmark_path(@topic, bookmark)
  .col-md-1
    
    

