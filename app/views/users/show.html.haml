%h2 
  My Blocmarks
.row
  .col-md-2
  .col-md-8
    - @user_bookmarks.each do |topic|
      %h2
        = link_to "##{topic.title}", topic_path(topic)
      - topic.bookmarks.each do |bookmark|
        %h4
          = link_to "#{bookmark.url}", topic_bookmark_path(topic, bookmark)
        %h5
          = link_to "remove", topic_bookmark_path(topic, bookmark), method: :delete
  .col-md-2
%h2  
  My Liked Blocmarks
.row
  .col-md-2
  .col-md-8
    - @bookmarks.each do |topic, bookmarks|
      %h2
        = link_to "##{topic.title}", topic_path(topic)
      - bookmarks.each do |bookmark|
        %h4 
          = link_to "#{bookmark.url}", topic_bookmark_path(topic, bookmark)
        %h4
          = render partial: "likes/like", locals: {topic: topic, bookmark: bookmark}
  .col-md-2
